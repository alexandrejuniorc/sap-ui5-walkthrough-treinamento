<mvc:View
  controllerName="sap.ui.demo/walkthrough.controller.App"
  xmlns:core="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
>
  <core:Shell>
    <core:App>

      <core:pages>
        <core:Page title="{i18n>homePageTitle}">

          <core:content>
            <core:Panel
              headerText="{i18n>helloPanelTitle}"
              class="sapUiResponsiveMargin"
              width="auto">
              <core:content>
                <core:Button
                  text="{i18n>showHelloButtonText}"
                  press=".onShowHello"
                  class="sapUiSmallMarginEnd">
                </core:Button>

                <core:Input
                  value="{/recipient/name}"
                  description="Hello {/recipient/name}"
                  valueLiveUpdate="true"
                  width="60%">
                </core:Input>
                <core:Text
                  text="Hello {/recipient/name}"
                  class="sapUiSmallMargin"></core:Text>
              </core:content>
            </core:Panel>
          </core:content>

        </core:Page>
      </core:pages>

    </core:App>
  </core:Shell>
</mvc:View>